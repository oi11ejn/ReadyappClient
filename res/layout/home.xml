<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_button"
        android:text="Create event"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="createEventActivity"
        android:background="#193441"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Events"
            android:id="@+id/event_button"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.50"
            android:background="#193441"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/profile_button"
            android:onClick="showProfile"
            android:src="@drawable/ic_action_user"
            android:layout_alignTop="@+id/friend_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Profile"
            android:layout_weight="0.50"
            android:textColor="#FFFFFF"
            android:background="#193441"/>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_list"
        android:layout_below="@+id/create_event_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rest test"
        android:id="@+id/rest_button"
        android:onClick="restTest"
        android:layout_alignTop="@+id/create_event_button"
        android:layout_alignLeft="@+id/event_list"
        android:layout_alignStart="@+id/event_list"/>

</RelativeLayout>
