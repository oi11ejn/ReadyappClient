<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cs.umu.se"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="15"
        android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/CustomActionBarTheme">
        <!--<meta-data android:name="com.google.android.gms.version"-->
                   <!--android:value="@integer/google_play_services_version" />-->
        <activity
            android:name="MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
            <activity
                android:name=".RegisterActivity"
                android:label="@string/register_title"
                android:parentActivityName=".MainActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
            </activity>
            <activity
                android:name=".HomeActivity"
                android:label="Events"
                android:launchMode="singleTop"
                android:parentActivityName=".MainActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
            </activity>
        <activity
            android:name=".FriendActivity"
            android:label="@string/friend_title"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
            <activity
                android:name=".SettingsActivity"
                android:label="@string/settings_title"
                android:parentActivityName=".HomeActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
            </activity>
            <activity
                android:name=".SearchActivity"
                android:label="@string/search_title"
                android:parentActivityName=".HomeActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
            </activity>
            <activity
                android:name=".CreateEventActivity"
                android:label="Create event"
                android:parentActivityName=".HomeActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
            </activity>
            <activity
                android:name=".ProfileActivity"
                android:label="@string/profile_title"
                android:parentActivityName=".HomeActivity" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
            </activity>
        <activity
            android:name=".MyFriendActivity"
            android:label="@string/your_friend_title"
            android:parentActivityName=".ProfileActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>
        <activity
            android:name=".ListUsersActivity"
            android:label="@string/result_title"
            android:parentActivityName=".SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SearchActivity" />
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:label="@string/result_title"
            android:parentActivityName=".ListUsersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListUsersActivity" />
        </activity>
        <activity
                android:name=".EventActivity"
                android:label="@string/event_title"
                android:parentActivityName=".HomeActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
        </activity>
        <activity
                android:name=".AddFriendsActivity"
                android:label="@string/friend_title"
                android:parentActivityName=".CreateEventActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".CreateEventActivity" />
        </activity>
        <service
            android:name=".RestService"
            android:exported="false"/>
    </application>
</manifest>
